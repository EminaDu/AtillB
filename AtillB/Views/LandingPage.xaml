<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AtillB.Views.LandingPage"
             Title="LandingPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome!" 
            VerticalOptions="Center" 
            HorizontalOptions="Center" 
            FontSize="32"/>
        <Button
                x:Name="TrainSch"
                Text="Train Schedule"
                Clicked="OnTrainScheduleClicked"
                HorizontalOptions="Center" 
                />
        <Button
                x:Name="CreateTr"
                Text="Create Trip"
                Clicked="OnCreateTripClicked"
                HorizontalOptions="Center" 
                />
        <Button
                x:Name="BookATr"
                Text="Book A Trip"
                Clicked="OnBookATripClicked"
                HorizontalOptions="Center" 
                />
    </VerticalStackLayout>
</ContentPage>